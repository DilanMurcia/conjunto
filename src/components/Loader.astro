---
const { isActive } = Astro.props;
---

<style>
  @keyframes expand {
    0% {
      transform: scale(1);
      opacity: 1;
    }
    100% {
      transform: scale(100); /* Ajusta el valor según el tamaño que quieras */
      opacity: 0;
    }
  }

  .overlay {
    position: fixed;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #ffffff;
    z-index: 50;
    overflow: hidden;
    animation: expand 2s ease-out forwards; /* Ajusta la duración aquí */
  }

  .loader {
    width: 50px;
    height: 50px;
    background-color: #333;
    border-radius: 50%;
  }
</style>

{isActive && (
  <div class="overlay">
    <div class="loader"></div>
  </div>
)}
