---
interface Props {
  title: string;
  body: string;
  href: string;
  class?: string; // Propiedad para clases adicionales
}

const { href, title, body, class: additionalClasses = '' } = Astro.props;
---

<a href={href} class={`block bg-white text-black mx-4 px-6 py-4 rounded-lg shadow-lg overflow-hidden mt-8 transition-colors duration-300 hover:bg-gray-100 hover:text-gray-800 ${additionalClasses}`}>
  <div class="flex flex-col items-center text-center">
    <h2 class="text-xl font-bold mb-3">{title}</h2>
    <p class="text-base mb-4">{body}</p>
  </div>
</a>